<PageTitle>Readings</PageTitle>
<h1>Readings</h1>

<table class="table">
    <thead>
        <tr>
            <th>Port</th>
            <th>Buoy Name</th>
            <th>Depth</th>
            <th>Sea Level</th>
            <th>Received On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var packet in packets.Items)
        {
            <tr>
                <td>@packet.Port</td>
                <td>@packet.BuoyName</td>
                <td>@packet.Depth.ToString("F1")</td>
                <td>@(packet.SeaLevel?.ToString("F1") ?? "-")</td>
                <td>@packet.ReadingOn</td>
            </tr>
        }
    </tbody>
</table>
